<%- include('header_loged'); -%>
    <main>
        <h1><%= question.title %></h1>
        <div class="answers">
            <form action="<%= question.id_question %>" method='POST'>
                <div class="answer">
                    <input class="input_radio" type="radio" name='ans' value="a" required/><%= question.opA %>
                </div>
                <div class="answer">
                    <input class="input_radio" type="radio" name='ans' value="b" /><%= question.opB %>
                </div>
                <div class="answer">
                    <input class="input_radio" type="radio" name='ans' value="c" /><%= question.opC %>
                </div>
                <div class="answer">
                    <input class="input_radio" type="radio" name='ans' value="d" /><%= question.opD %>
                </div>
                <div class="answer" id="other">
                    <input class="input_radio" type="radio" name='ans' value="o" />Otra: 
                    <input class="input_text" type="text" name="other">
				</div>
				<div class="send_answer">
					<input class="input_button" id="send" type="submit" value="Responder"/>
				</div>
            </form>
        </div>
    </main>
<%- include('footer'); -%>